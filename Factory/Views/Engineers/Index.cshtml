@{
  Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Engineer>;

<h2>List of Engineers: </h2>
@if (@Model.Count == 0)
{
  <h4>No engineers have been hired yet</h4>
}

@foreach (Engineer engineer in Model)
{
  <li>@Html.ActionLink($"{engineer.EngineerName}", "Details", new { id = engineer.EngineerId })</li>
}

<button class="btn btn-info">@Html.ActionLink("Add an engineer", "Create")</button>
<button class="btn btn-success">@Html.ActionLink("Back to home page", "Index", "Home")</button>