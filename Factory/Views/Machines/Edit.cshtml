@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h2>Edit Details for @Model.MachineName </h2>

@using (Html.BeginForm())
{
  @Html.HiddenFor(machine => machine.MachineId);
  @Html.LabelFor(machine => machine.MachineId)
  @Html.TextBoxFor(machine => machine.MachineId);

  <button class="btn btn-success" type="submit">Edit Details</button>
}

<button class="btn btn-dark">@Html.ActionLink("Back To Machines List", "Index")</button>