@{
  Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Machine>;

<h2>List of Machines: </h2>
@if (@Model.Count == 0)
{
  <h4>No Machines have been hired yet</h4>
}

@foreach (Machine machine in Model)
{
  <li>@Html.ActionLink($"{machine.MachineName}", "Details", new { id = machine.MachineId })</li>
}

<button class="btn btn-info">@Html.ActionLink("Add an Machine", "Create")</button>
<button class="btn btn-success">@Html.ActionLink("Back to home page", "Index", "Home")</button>